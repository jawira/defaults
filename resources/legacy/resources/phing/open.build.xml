<?xml version="1.0" encoding="UTF-8" ?>

<project name="open" description="Url shortcuts" default="open:localhost">

    <!--Add your own links here-->
    <target name="open:localhost" description="Open localhost in browser">
        <exec command="xdg-open http://localhost"/>
    </target>

    <target name="open:mdn" description="MDN web docs">
        <exec command="xdg-open https://developer.mozilla.org/en-US/"/>
    </target>
    
    <target name="open:security-headers" description="Analyse http response headers">
        <exec command="xdg-open https://securityheaders.com/"/>
    </target>

    <target name="open:dns-records" description="DNS records lookup">
        <exec command="xdg-open https://dnsrecords.io/"/>
    </target>

</project>
